<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import visualization.ZoomScrollPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8.0.102" fx:controller="visualization.VisController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="emptyMapMenuItem" mnemonicParsing="false" text="Empty Graph"/>
                        <Menu mnemonicParsing="false" text="New">
                            <items>
                                <MenuItem fx:id="graph1MenuItem" mnemonicParsing="false"
                                          text="Paper Graph, 2 Lions fail"/>
                                <MenuItem fx:id="graph2MenuItem" mnemonicParsing="false"
                                          text="Paper Graph, 3 Lions succeed"/>
                                <MenuItem fx:id="graph3MenuItem" mnemonicParsing="false" text="Small Graph"/>
                                <MenuItem fx:id="graph4MenuItem" mnemonicParsing="false" text="Graph 4"
                                          visible="false"/>
                                <MenuItem fx:id="graph5MenuItem" mnemonicParsing="false" text="Graph 5"
                                          visible="false"/>
                                <MenuItem fx:id="randomGraphMenuItem" mnemonicParsing="false" text="Random Map"
                                          visible="false"/>
                            </items>
                        </Menu>
                        <MenuItem fx:id="openMapMenuItem" mnemonicParsing="false" text="Open"/>
                        <MenuItem fx:id="saveMapMenuItem" mnemonicParsing="false" text="Save"/>
                    </items>
                </Menu>

            </menus>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" text="Unspecified Action"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </MenuBar>
    </top>
    <bottom>

    </bottom>
    <center>
        <ZoomScrollPane fx:id="zoomScrollPane">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </ZoomScrollPane>
    </center>
    <bottom>
        <ButtonBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="stopAnimationButton" alignment="CENTER" mnemonicParsing="false" text="Stop"
                        disable="true"/>
                <Button fx:id="playAnimationButton" alignment="CENTER" mnemonicParsing="false" text="Play"
                        disable="true"/>
                <Button fx:id="stepAnimationButton" alignment="CENTER" mnemonicParsing="false" text="Single Step"
                        disable="true"/>
                <Button fx:id="animationToggleButton" alignment="CENTER" mnemonicParsing="false" text="Play Mode"/>
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>
